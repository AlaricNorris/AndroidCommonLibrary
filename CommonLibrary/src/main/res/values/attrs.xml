<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProgressCircleViewStyle">
        <attr name="background_color" format="color"></attr>
        <attr name="foreground_color" format="color"></attr>
        <attr name="second_color" format="color"></attr>
        <!-- 进度方向 -->
        <attr name="pdirection" format="enum">
            <enum name="left" value="1"></enum>
            <enum name="right" value="2"></enum>
        </attr>
        <!-- 百分比 -->
        <attr name="progress" format="integer"></attr>
        <attr name="second_progress" format="integer"></attr>
        <attr name="width" format="dimension"></attr>
        <attr name="bgwidth" format="dimension"></attr>
        <attr name="stoke_width" format="dimension"></attr>
        <attr name="text_size" format="dimension"></attr>
        <attr name="arror" format="reference"></attr>
        <attr name="text_color" format="color"></attr>
        <attr name="text" format="string"></attr>
        <!-- 起始位置 -->
        <attr name="start_direction" format="enum">
            <enum name="left" value="1"></enum>
            <enum name="top" value="2"></enum>
            <enum name="right" value="3"></enum>
            <enum name="botton" value="4"></enum>
        </attr>
        <!-- 是否显示圆球 -->
        <attr name="showcircle" format="boolean"></attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextViewAttr">
        <!-- 允许显示最大行数 -->
        <attr name="maxExpandLines" format="integer"></attr>
        <!-- 动画执行时间 -->
        <attr name="duration" format="integer"></attr>
    </declare-styleable>

    <!-- SwipyRefreshLayout相关属性 -->
    <declare-styleable name="SwipyRefreshLayout"> 
        <attr name="srl_direction"> 
            <enum name="top" value="0" /> 
            <enum name="bottom" value="1" /> 
            <enum name="both" value="2" /> 
        </attr> 
    </declare-styleable>

    <!-- LoadingView相关属性 -->
    <declare-styleable name="LoadingView">
        <attr name="loading_renderer">
            <!--circle rotate-->
            <enum name="MaterialLoadingRenderer" value="0"/>
            <enum name="LevelLoadingRenderer" value="1"/>
            <enum name="WhorlLoadingRenderer" value="2"/>
            <enum name="GearLoadingRenderer" value="3"/>
            <!--circle jump-->
            <enum name="SwapLoadingRenderer" value="4"/>
            <enum name="GuardLoadingRenderer" value="5"/>
            <enum name="DanceLoadingRenderer" value="6"/>
            <enum name="CollisionLoadingRenderer" value="7"/>
        </attr>
    </declare-styleable>
</resources>